{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "yarn lint && yarn size-limit && yarn unit",
    "unit": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size-limit": "size-limit"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "quoteProps": "as-needed",
    "useTabs": false,
    "tabWidth": 2
  },
  "size-limit": [
    {
      "path": "dist/react-animate.esm.js",
      "limit": "2 KB"
    }
  ],
  "name": "react-animate",
  "author": "Michael Bashurov",
  "module": "dist/react-animate.esm.js",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.5.0",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "husky": "^4.2.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "size-limit": "^4.5.0",
    "tsdx": "^0.13.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  }
}
